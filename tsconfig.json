{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2019.Array",
      "ES2020"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "outDir": "bin",
    "tsBuildInfoFile": ".tsbuildinfo",
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "bin",
    "node_modules"
  ]
}