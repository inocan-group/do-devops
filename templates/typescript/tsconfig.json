{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",

    "sourceMap": false,
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "outDir": "bin",
    "tsBuildInfoFile": ".tsbuildinfo",

    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "test"]
}
